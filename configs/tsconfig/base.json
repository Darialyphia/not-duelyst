{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "module": "ES6",
    "lib": ["es2022"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
