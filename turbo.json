{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "CONVEX_URL",

        "CLERK_PUBLISHABLE_KEY",
        "CLERK_SECRET_KEY",

        "HATHORA_APP_ID"
      ],
      "outputs": ["dist/**", ".output/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
