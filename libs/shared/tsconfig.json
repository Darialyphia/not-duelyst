{
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "tsup.config.ts"],
  "exclude": [".git", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021",
    "module": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
